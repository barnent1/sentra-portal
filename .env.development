# Development Environment Configuration
# This file contains safe defaults for local development

# Application
NODE_ENV="development"
PORT="3000"

# Database (using local PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/sentra_dev"

# Redis (using local Redis)
REDIS_URL="redis://localhost:6379"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="development-secret-key-only-for-local-development"

# Security (development only values)
API_KEY_SALT="development-api-key-salt-not-for-production"
JWT_SECRET="development-jwt-secret-not-for-production-use"
ENCRYPTION_KEY="development-encryption-key-32-char!"
CSRF_SECRET="development-csrf-secret-not-for-production"

# Email (using local SMTP or console)
EMAIL_FROM="dev@localhost"
SMTP_HOST="localhost"
SMTP_PORT="1025"

# Features
FEATURE_REGISTRATION_ENABLED="true"
FEATURE_EMAIL_VERIFICATION="false"
DEBUG="true"
LOG_LEVEL="debug"